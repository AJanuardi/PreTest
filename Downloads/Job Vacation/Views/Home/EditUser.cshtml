<h1>Edit Profile</h1>
<br>

<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8" style="text-align: center;">
            @{
            var x = ViewBag.seekers;
            foreach (var i in x)
            {
            <form method="POST" enctype="multipart/form-data" asp-action="EditorUser" asp-controller="Home">
            <input id="id" name="id" value="@i.id" hidden>
            <div class="form-group">
            <input class="form-control" id="name" name="name" placeholder="name" value="@i.name">
            </div>
            <div class="form-group">
            <input class="form-control" id="birthdate" name="birthdate" placeholder="birthdate" value="@i.birthdate">
            </div>
            <div class="form-group">
            <input class="form-control" id="phone" name="phone" placeholder="phone" value="@i.phone">
            </div>
            <div class="form-group">
            <input class="form-control" id="address" name="address" placeholder="address" value="@i.address">
            </div>
            <div class="form-group">
            <label>CV</label>
            <input type="file" id="cv" name="cv" placeholder="cv">
            </div>
            <div class="form-group">
            <label>Photo</label>
            <input type="file" id="photo" name="photo" placeholder="photo">
            </div>
            <div class="form-group">
            <input class="form-control" id="username" name="username" placeholder="username" value="@i.username">
            </div>
            <div class="form-group">
            <input class="form-control" type="password" name="password" id="password" placeholder="password" value="@i.password">
            </div>
            <div class="form-group">
            <input class="form-control" id="email" name="email" placeholder="email" value="@i.email">
            </div>
            <input type="submit" class="btn btn-success">
            </form>
            }
            }
        </div>
    </div>
</div>
