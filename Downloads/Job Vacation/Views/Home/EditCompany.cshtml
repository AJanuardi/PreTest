<h1>Edit Profile</h1>
<br>

<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8" style="text-align: center;">
            @{
            var x = ViewBag.companies;
            <form method="POST" enctype="multipart/form-data" asp-action="EditorCompany" asp-controller="Home">
            <div class="form-group">
            <input class="form-control" id="name" name="name" placeholder="name" value="@x.name">
            </div>
            <div class="form-group">
            <input class="form-control" id="phone" name="phone" placeholder="phone" value="@x.phone">
            </div>
            <div class="form-group">
            <input class="form-control" id="address" name="address" placeholder="address" value="@x.address">
            </div>
            <div class="form-group">
            <label>Photo</label>
            <input type="file" id="logo" name="logo" placeholder="logo">
            </div>
            <div class="form-group">
            <input class="form-control" id="username" name="username" placeholder="username" value="@x.username">
            </div>
            <div class="form-group">
            <input class="form-control" type="password" name="password" id="password" placeholder="password" value="@x.password">
            </div>
            <div class="form-group">
            <input class="form-control" id="email" name="email" placeholder="email" value="@x.email">
            </div>
            <input type="submit" class="btn btn-success">
            </form>
            }
        </div>
    </div>
</div>
