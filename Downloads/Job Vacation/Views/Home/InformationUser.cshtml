<button onclick="window.location.href='/Home/EditUser'" class="btn btn-success">Edit Profiles</button>

<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8" style="text-align: center;">
            @{
            var x = ViewBag.seekers;
            <form method="POST" enctype="multipart/form-data" asp-action="EditorUser" asp-controller="Home">
            <input id="id" name="id" value="@x.id" hidden>
            <div class="form-group">
            <input class="form-control" id="name" name="name" placeholder="name" value="@x.name" readonly>
            </div>
            <div class="form-group">
            <input class="form-control" id="birthdate" name="birthdate" placeholder="birthdate" value="@x.birthdate" readonly>
            </div>
            <div class="form-group">
            <input class="form-control" id="phone" name="phone" placeholder="phone" value="@x.phone" readonly>
            </div>
            <div class="form-group">
            <input class="form-control" id="address" name="address" placeholder="address" value="@x.address" readonly>
            </div>
            <div class="form-group">
            <label>CV</label>
            <input type="file" id="cv" name="cv" placeholder="cv">
            </div>
            <div class="form-group">
            <label>Photo</label>
            <input type="file" id="photo" name="photo" placeholder="photo">
            </div>
            <div class="form-group">
            <input class="form-control" id="username" name="username" placeholder="username" value="@x.username" readonly>
            </div>
            <div class="form-group">
            <input class="form-control" type="password" name="password" id="password" placeholder="password" value="@x.password" readonly>
            </div>
            <div class="form-group">
            <input class="form-control" id="email" name="email" placeholder="email" value="@x.email" readonly>
            </div>
            </form>
            }
        </div>
    </div>
</div>
