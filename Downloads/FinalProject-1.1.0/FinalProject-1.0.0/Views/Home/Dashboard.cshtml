<div class="container">
    <div class="row">
        <div class="col-md-6">
                        <div class="card border-info">
                            <div class="card-header bg-info" style="text-align: center;">
                                <b>Upcoming Events</b>
                            </div>
                            <div class="card-body">
                            @{
                            var n = ViewBag.reminders;
                            foreach (var i in n)
                            {
                                <div class="container">
                                    <div class="row">
                                        <div class="col-md-2" style="text-align: left;">
                                            <img src="/images/Calendar.svg" width="15px" height="15px">
                                        </div>
                                        <div class="col-md-4" style="text-align: left;">
                                            <h6 class="card-title">@i.name</h6>
                                        </div>
                                        <div class="col-md-6" style="text-align: right;">
                                            <h6 class="card-title">@i.events.DayOfWeek, @i.events.ToShortDateString()</h6>
                                        </div>
                                    </div>
                                </div>
                                   
                            }
                            }
                            </div>
                        </div>
        </div>
        <div class="col-md-6">
                        <div class="card border-sinfo">
                            <div class="card-header bg-info" style="text-align: center;">
                                <b>New Applicants</b>
                            </div>
                            <div class="card-body">
                                @{
                                var m = ViewBag.apply;
                                foreach (var i in m)
                                {
                                <div class="container">
                                    <div class="row">
                                        <div class="col-md-2" style="text-align: left;">
                                            <img src="/images/user.svg" width="15px" height="15px">
                                        </div>
                                        <div class="col-md-4" style="text-align: left;">
                                            <h6 class="card-title">@i.name</h6>
                                        </div>
                                        <div class="col-md-6" style="text-align: right;">
                                            <h6 class="card-title">@i.apply</h6>
                                        </div>
                                    </div>
                                </div>
                                }
                                }
                            </div>
                        </div>
        </div>
    </div>
</div>

